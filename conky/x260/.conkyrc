conky.config = {
	alignment = 'top_right',
	display = VGA,
	background = true,
	border_width = 1,
	cpu_avg_samples = 2,
	default_color = '#88BBFF',
	color0 = '#0077FF',
	default_outline_color = '#0077FF',
	default_shade_color = '#0077FF',
	double_buffer = true,
	draw_borders = false,
	draw_graph_borders = true,
	draw_outline = false,
	draw_shades = false,
	gap_x = 15,
	gap_y = 15,
	maximum_width = 210,
	max_port_monitor_connections = 64,
	max_specials = '512',
	max_user_text = 16384,
	minimum_width = 330, minimum_height = 10,
	net_avg_samples = 2,
	no_buffers = true,
	out_to_console = false,
	wm_class_name = 'Conky',
	own_window_colour = 'black',
	own_window_hints = 'undecorated,below,skip_taskbar,skip_pager',
	own_window_transparent = true,
	own_window_type = 'normal',
	own_window = true,
	stippled_borders = 2,
	update_interval = 2,
	uppercase = false,
	use_spacer = 'none',
	use_xft = true,
	xftalpha = 0.8,
	font = 'Bitstream Vera Sans Mono:size=9',

};

conky.text = [[
${color0}$sysname $kernel ${alignr}$color${time %k:%M:%S}
${machine} @ $freq(MHz)
${color0}Core1:$color ${cpu cpu0}%$alignr${exec sensors | grep 'Core 0' | cut -c16-22 | sed '/^$/d'}
${color0}${cpugraph cpu1 32,210 0077FF 0077ff}
${color0}Core2:$color ${cpu cpu1}%$alignr${exec sensors | grep 'Core 1' | cut -c16-22 | sed '/^$/d'}
${color0}${cpugraph cpu2 32,210 0077FF 0077ff}
${color0}DDR4: $color$memperc%$alignr$mem${color0}/${color}$memmax
${color0}$membar
#${memgraph 32,210  0077FF 0077ff}
SWAP used: $swap/$swapmax

NETWORK:
${color0}Down: $color${downspeed wlp4s0}$alignr${totaldown wlp4s0}
${color0}${downspeedgraph wlp4s0 32,210 0077ff 0077ff}
${color0}Up:   $color${upspeed wlp4s0}$alignr${totalup wlp4s0}
${color0}${upspeedgraph wlp4s0 32,210 0077FF 0077ff}
DRIVES:
${color0}/$alignr$color${fs_used /}${color0}/$color${fs_size /}
${color0}${fs_bar 5,210 /}
${color0}/home$alignr$color${fs_used /home}${color0}/$color${fs_size /home}
${color0}${fs_bar 5,210 /home}
${color0}Read: $color${diskio_read}$alignr${color0}Write: $color${diskio_write}
${color0}${diskiograph /dev/sda 32,210 0077FF 0077ff}
 
${color0}Top:${alignr}CPU%
$color${top name 1}$alignr${top cpu 1}
$color${top name 2}$alignr${top cpu 2}
$color${top name 3}$alignr${top cpu 3}
$color${top name 4}$alignr${top cpu 4}
$color${top name 5}$alignr${top cpu 5}
${color0}${alignr}MEM
$color${top_mem name 1}$alignr${top_mem mem_res 1}
$color${top_mem name 2}$alignr${top_mem mem_res 2}
$color${top_mem name 3}$alignr${top_mem mem_res 3}
$color${top_mem name 4}$alignr${top_mem mem_res 4}
$color${top_mem name 5}$alignr${top_mem mem_res 5}
]];
