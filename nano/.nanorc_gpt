# ===== Общие настройки =====

set linenumbers             # Показывать номера строк слева.
set const                   # Показывать позицию курсора в строке (колонка, строка).
set nowrap                  # Отключить перенос строк. Строки будут отображаться одной строкой.
set mouse                   # Включить поддержку мыши для выделения текста и позиционирования курсора.
set smarthome               # Курсор прыгает в начало текста строки (а не на самую левую колонку) при нажатии Home.
set tabsize 4               # Размер табуляции (рекомендуется 4 пробела).
set tabstospaces            # Преобразовывать табуляции в пробелы.

# ===== Автозакрытие файлов =====

set backup                  # Создавать резервные копии файлов при сохранении (с суффиксом ~).
set locking                 # Включить блокировку файла для предотвращения одновременного редактирования.

# ===== Подсветка синтаксиса =====

include /usr/share/nano/*.nanorc  # Подключение всех доступных файлов подсветки синтаксиса.
# Если вы используете пользовательские шаблоны подсветки, добавьте их сюда.
# Например:
# include ~/.nano/syntax/*.nanorc

# ===== Визуальные настройки =====

set smooth                  # Плавная прокрутка текста по строкам.
set softwrap                # Включить мягкий перенос строк (не влияет на сам текст).
set indicator               # Показывать индикатор прокрутки справа.

# ===== Упрощение работы =====

set historylog              # Сохранять историю команд поиска и замены.
set zap                     # Удалять строку при нажатии Ctrl+K без необходимости подтверждения.
set quickblank              # Очищать область ввода поиска/замены быстрее (без необходимости подтверждения).

# ===== Поиск =====

set casesensitive           # Поиск учитывает регистр букв.
set regexp                  # Включить поддержку регулярных выражений в поиске.
